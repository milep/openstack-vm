export IDEA_HOME=$HOME/Apps/idea-IC-129.713/

export PATH=${JAVA_HOME}/bin:$M2_HOME/bin:$ANT_HOME/bin:$PATH
export PATH=${HOME}/bin:$PATH
export PATH=${GRADLE_HOME}:$PATH
export PATH=${IDEA_HOME}/bin:$PATH

alias changelog="cat /etc/ChangeLog"
alias team="cat /etc/motd"

export WORKON_HOME=$HOME/.virtualenvs
alias python_venvwrapper="source /usr/local/bin/virtualenvwrapper.sh"

alias vncserveur='x11vnc -no6 -noipv6 -nossl -solid darkblue -noxinerama -noxrandr -modtweak -cursor arrow -noalphablend -ncache 6 -forever -noxdamage -noxdamage -forever'

alias Perso_HOME="$HOME/Perso"
